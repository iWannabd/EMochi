<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#455FA9"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:background="#F8B600"
        android:id="@+id/imageView6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/nama_polres"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView6"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/almat_polres"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView6"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nama_polres"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="10sp"
        app:layout_constraintRight_toLeftOf="@+id/guideline2" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/phone_polres"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView6"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/almat_polres"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline2" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="0dp"
        android:background="#FFF"
        android:id="@+id/btn_map"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/imageView15" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="0dp"
        android:background="@android:color/holo_red_dark"
        android:id="@+id/imageView15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_call_black_24dp"
        android:id="@+id/btn_phone"
        app:layout_constraintTop_toTopOf="@+id/imageView15"
        app:layout_constraintLeft_toLeftOf="@+id/imageView15"
        app:layout_constraintBottom_toBottomOf="@+id/imageView15"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="-119dp"
        app:layout_constraintGuide_end="120dp" />

    <ImageView
        android:background="@drawable/maps"
        android:id="@+id/imageView32"
        app:layout_constraintLeft_toLeftOf="@+id/btn_map"
        app:layout_constraintRight_toLeftOf="@+id/imageView15"
        app:layout_constraintTop_toTopOf="@+id/btn_map"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="47dp"
        android:layout_height="47dp" />


</android.support.constraint.ConstraintLayout>